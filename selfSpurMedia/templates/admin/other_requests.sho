<!DOCTYPE html>
<html lang="en">

<head>
    {% load static%}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashboard</title>

    <!-- Bootstrap Core CSS -->
    <link href="{% static 'admin/bower_components/bootstrap/dist/css/bootstrap.min.css' %}" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="{% static 'admin/bower_components/metisMenu/dist/metisMenu.min.css' %}" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="{% static 'admin/dist/css/timeline.css' %}" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{% static 'admin/dist/css/sb-admin-2.css' %}" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="{% static 'admin/bower_components/morrisjs/morris.css' %}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{% static 'admin/bower_components/font-awesome/css/font-awesome.min.css' %}" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<div id="wrapper">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="index.html">Self Spur Media Dashboard</a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">

            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i>  <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="login.html"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="{% url 'home'%}"><i class="fa fa-dashboard fa-fw"></i> Go back to main Site</a>
                    </li>
                    <li>
                        <a href="{% url 'subscriber'%}"><i class="fa fa-dashboard fa-fw"></i> Subscribers</a>
                    </li>
                    <li>
                        <a href="{% url 'package'%}"><i class="fa fa-dashboard fa-fw"></i> Packages</a>
                    </li>
                    <li>
                        <a href="{% url 'package_request'%}"><i class="fa fa-dashboard fa-fw"></i> Package Requests</a>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Dashboard</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form class="form-inline" action="{% url 'other_request' %}" method="post">{% csrf_token %}
                    <div class="form-group">
                        <label for="option">Option</label>
                        <select class="form-control" name="option">
                            <option value="null">Select</option>
                            <option value="category">Category</option>
                            <option value="type">Type</option>
                            <option value="brand">Brand</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName2">Name</label>
                        <input type="text" class="form-control" id="Name" name="name" placeholder="Name of the Package" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName3">Remarks</label>
                        <input type="text" class="form-control" id="Remarks" name="remarks" placeholder="Details">
                    </div>
                    <button type="submit" class="btn btn-success" style="width:100px;">Add</button>
                </form>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Categories
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table1">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Details</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in all_categories %}
                                    <tr>
                                        <td>{{ category.name }}</td>
                                        <td>{{ category.remarks }}</td>
                                        {% if category.isActive %}
                                        <td><a href="/other_request/?item=category&toggle={{ category.id }}">Active</a></td>
                                        {% else %}
                                        <td><a href="/other_request/?item=category&toggle={{ category.id }}">Inactive</a></td>
                                    {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Type
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table4">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Remarks</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for type in all_types %}
                                    <tr>
                                        <td>{{ type.name }}</td>
                                        <td>{{ type.remarks }}</td>
                                        {% if type.isActive %}
                                        <td><a href="/other_request/?item=type&toggle={{ type.id }}">Active</a></td>
                                        {% else %}
                                        <td><a href="/other_request/?item=type&toggle={{ type.id }}">Inactive</a></td>
                                    {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Brands
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="table4">
                                <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Remarks</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for brand in all_brands %}
                                    <tr>
                                        <td>{{ brand.name }}</td>
                                        <td>{{ brand.remarks }}</td>
                                        {% if brand.isActive %}
                                        <td><a href="/other_request/?item=brand&toggle={{ brand.id }}">Active</a></td>
                                        {% else %}
                                        <td><a href="/other_request/?item=brand&toggle={{ brand.id }}">Inactive</a></td>
                                    {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery -->
<script src="{% static 'admin/bower_components/jquery/dist/jquery.min.js' %}"></script>

<!-- Bootstrap Core JavaScript -->
<script src="{% static 'admin/bower_components/bootstrap/dist/js/bootstrap.min.js' %}"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="{% static 'admin/bower_components/metisMenu/dist/metisMenu.min.js' %}"></script>

<!-- Morris Charts JavaScript -->
<script src="{% static 'admin/bower_components/raphael/raphael-min.js' %}"></script>
<script src="{% static 'admin/bower_components/morrisjs/morris.min.js' %}"></script>
<script src="{% static 'admin/js/morris-data.js' %}"></script>

<!-- Custom Theme JavaScript -->
<script src="{% static 'admin/dist/js/sb-admin-2.js' %}"></script>
<script>
    $(document).ready(function() {
        $('#table1').DataTable( {
//            "paging":   false,
//            "ordering": false,
//            "info":     false
        } );
    } );
</script>

</body>

</html>
